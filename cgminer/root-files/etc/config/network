
config 'interface' 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option ifname 'eth0'
	option proto 'static'
	option ipaddr '192.168.0.100'
	option netmask '255.255.255.0'
	option hostname 'raspberry'

config interface 'wan'
	option ifname 'eth0'
	option proto 'dhcp'
	option netmask '255.255.255.0'
	option hostname 'raspberry'
